{{#if responseMessage}}
	<div class="alert alert-success">{{responseMessage}}</div>
{{/if}}
<div class="row">
	{{#link-to 'rentals.new' class='pull-right btn btn-primary'}} New {{/link-to}}
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Daily Rate</th>
			<th>Action</th>
			<th>Book</th>
		</tr>
	</thead>
	<tbody>
		{{#each model as |item|}}
		<tr>
			<td>{{item.name}}</td>
			<td>{{item.daily_rate}}</td>
			<td>
				{{#link-to 'rentals.edit' item.id class='btn'}}<span class="glyphicon glyphicon-edit"></span>{{/link-to}}
				<a href="" {{action 'deleteRental' item }} class='btn'><span class="glyphicon glyphicon-trash"></span></a>
			</td>
			<td></td>
		</tr>
		{{/each}}
	</tbody>
</table>