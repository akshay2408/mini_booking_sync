{{#if responseMessage}}
  <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}
<h2 class="margin-top">Bookings list</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Price</th>
      <th>Start At</th>
      <th>End At</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |item|}}
    <tr>
      <td>{{item.rental.name}}</td>
      <td>{{item.client_email}}</td>
      <td>{{item.price}}</td>
      <td>{{format-date date=item.start_at}}</td>
      <td>{{format-date date=item.end_at}}</td>
      <td>
        {{#link-to 'bookings.edit' item.id class='btn'}}<span class="glyphicon glyphicon-edit"></span>{{/link-to}}
        <a href="" {{action 'deleteBooking' item }} class='btn'><span class="glyphicon glyphicon-trash"></span></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>