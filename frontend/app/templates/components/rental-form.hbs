<h3 class="text-center">{{title}}</h3>
<form>
  <div class="form-group">
    <label>Name</label>
    {{input class="form-control inputName" placeholder="Name" value=item.name}}
  </div>
  <div class="form-group">
    <label>Daily rate</label>
    {{input type='number' class="form-control inputrate" placeholder="Daily rate" value=item.daily_rate}}
  </div>
  <button type="submit" class="btn btn-default submit" {{action 'buttonClicked' item}} disabled={{unless item.isValid true}}>{{buttonLabel}}</button>
</form>